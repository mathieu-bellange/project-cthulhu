.investigator-nav
  position: relative
  z-index: 1
  display: flex
  align-items: flex-end
  top: 1px
  background-color: #fff
  width: max-content
  .nav-item
    cursor: pointer
    &.active
      cursor: default
      font-size: 1.25em
      border-bottom: none
      border-right: 1px solid #000
    &:last-child
      border-right: 1px solid #000
    border-left: 1px solid #000
    border-top: 1px solid #000
    border-bottom: 1px solid #000
    padding: 0.25em 0.5em
