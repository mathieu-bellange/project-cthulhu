.base-stat
  display: flex
  padding: 0.25em 0.25em
  align-items: center
  span
    min-width: 30px
  .roll-info
    display: flex
    border: 1px solid #000
    .ordinary
      border-right: 1px solid #000
      padding: 0.25em
      display: flex
      align-items: center
    .other
      display: flex
      flex-direction: column
      font-size: 0.75em
      .major
        border-bottom: 1px solid #000
      .major, .extreme
        padding: 0.25em
