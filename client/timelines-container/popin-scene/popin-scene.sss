.popin-scene
  display: none
  position: absolute
  top: 0
  left: 0
  height: calc(100% - 0.5em - 2px)
  width: calc(100% - 0.5em - 2px)
  background-color: #fff
  padding: 0.25em
  border: 1px solid #000
  &.show
    display: flex
  i
    position: absolute
    top: 0
    right: 0
    margin-right: 0.15em
    cursor: pointer
    font-size: 1.25em
  .content
    flex-basis: 75%
    margin-right: 0.25em
