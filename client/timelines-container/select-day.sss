.select-day
  position: absolute
  bottom: -5em
  display: flex
  align-items: center
  border: 1px solid #000
  padding: 0.5em
  cursor: pointer
  display: none
  background-color: #fff
  &.show
    display: flex
  &.next-day
    right: 0
  &.previous-day
    left: 0
    flex-direction: row-reverse
  .name
    margin-right: 1em
    &.previous-day
      margin-left: 1em

@media (max-width: 1280px)
  .select-day
    bottom: -3.5em
