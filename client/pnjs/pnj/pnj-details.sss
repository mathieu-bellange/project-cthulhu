.pnj-details
  display: flex
  flex-direction: column
  align-items: flex-start
  justify-content: flex-start
  flex-basis: 100%
  &.minimize
    display: none
  & > *
    width: 100%
    margin-bottom: 0.5em
    &:last-child
      margin-bottom: 0
  a .full-page
    display: flex
    background-color: #1E1E1E
    color: #9B9B9B
    border-radius: 10px
    justify-content: space-between
    align-items: center
    padding: 0.5em
    width: auto
