.pnj
  display: flex
  font-size: 0.8em
  & > *
    padding: 0.5em
    &:first-child
      padding-right: 0
  &.maximize
    flex-basis: 100%
    margin-right: 0
    .pnj-overview.minimize
      flex-basis: 35%
      img
        max-height: none
    .details
      padding-right: 0
      padding-top: 0
